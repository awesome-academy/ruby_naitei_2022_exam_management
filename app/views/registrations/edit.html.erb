<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: { method: :put }) do |f| %>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      <%= raw error_message(resource, :email) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= raw error_message(resource, :name) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <%= raw error_message(resource, :password) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      <%= raw error_message(resource, :password_confirmation) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      <%= raw error_message(resource, :current_password) %>
    </div>
    <div class="actions col-md-6 col-md-offset-3">
      <%= f.submit t(".update"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
